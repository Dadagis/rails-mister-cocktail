
<div class="container">
<h1>Daj Cocktails</h1>
    <div class="cards">
      <% @cocktails.each do |cocktail| %>

        <%= link_to cocktail_path(cocktail), class: "test" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>)">
            <%= cocktail.name %>
          </div>
        <% end %>

        <% end %>
    </div>
  <%= link_to "create new cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>


