<div class="container">
  <h1><%= @cocktail.name %></h1>
  <hr>

  <p>Ingedients : </p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> : <%= dose.description %> - <%= link_to "X", dose_path(dose), method: :Delete, class: "btn btn-danger" %></li>
    <% end %>
  </ul>
  <hr>

  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>

  <hr>
  <%= link_to "Back to menu", cocktails_path, class: "btn btn-primary" %>
</div>
