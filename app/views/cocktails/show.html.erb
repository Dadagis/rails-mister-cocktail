<div class="imagefond" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>)">
  <h1><%= @cocktail.name %></h1>
</div>

<div class="container">
  <hr>

  <p>Ingedients : </p>
  <div class="ingredient">
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> : <%= dose.description %> - <%= link_to "X", dose_path(dose), method: :Delete, class: "btn btn-danger" %></li>
    <% end %>
  </ul>
  <hr>
  <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-flat" %>
  </div>

  <hr>
  <%= link_to "Back to menu", cocktails_path, class: "btn btn-primary" %>
</div>
